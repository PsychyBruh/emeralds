<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS if needed -->
</head>
<body>
    <% if (loggedIn) { %>
        <header>
            <h1>Admin Dashboard</h1>
            <nav>
                <a href="/admin">Home</a>
                <a href="/admin/settings">Settings</a>
                <a href="/admin/logout">Logout</a>
            </nav>
        </header>
        <main>
            <h2>Welcome, Admin!</h2>
            <!-- You can include more admin dashboard content here -->
            <div id="onlineIps">
                <h3>Online IPs</h3>
                <ul id="ipsList"></ul>
            </div>
        </main>
        <script>
            // Fetch online IPs
            fetch('/api/online-ips')
                .then(response => response.json())
                .then(data => {
                    const ipsList = document.getElementById('ipsList');
                    ipsList.innerHTML = data.map(ip => `<li>${ip}</li>`).join('');
                })
                .catch(error => console.error('Error fetching online IPs:', error));
        </script>
    <% } else { %>
        <script>
            // Redirect to login page if not logged in
            window.location.href = '/admin/login';
        </script>
    <% } %>
</body>
</html>

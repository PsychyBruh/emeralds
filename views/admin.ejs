<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/assets/css/admin.css"> <!-- Link to your CSS file -->
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .container {
      width: 80%;
      margin: auto;
      padding: 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    .navbar {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }
    .navbar a {
      margin: 0 15px;
      padding: 10px 20px;
      text-decoration: none;
      color: #007bff;
      border: 1px solid #007bff;
      border-radius: 5px;
      transition: background-color 0.3s, color 0.3s;
    }
    .navbar a:hover {
      background-color: #007bff;
      color: #fff;
    }
    .section {
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: #fff;
    }
    .section h2 {
      margin-top: 0;
    }
    .ip-list {
      list-style-type: none;
      padding: 0;
    }
    .ip-list li {
      margin-bottom: 10px;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .ip-list button {
      border: none;
      padding: 5px 10px;
      border-radius: 5px;
      color: #fff;
      cursor: pointer;
      font-size: 14px;
      transition: background-color 0.3s;
    }
    .ban-button {
      background-color: #d9534f; /* Red color for ban */
    }
    .ban-button:hover {
      background-color: #c9302c;
    }
    .unban-button {
      background-color: #5bc0de; /* Blue color for unban */
    }
    .unban-button:hover {
      background-color: #31b0d5;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Admin Dashboard</h1>
    <div class="navbar">
      <a href="/admin">Home</a>
      <a href="/admin?section=ban-ip">Ban IP</a>
      <a href="/admin?section=unban-ip">Unban IP</a>
    </div>

    <% if (page === 'ban-ip') { %>
      <div class="section">
        <h2>Ban IPs</h2>
        <ul class="ip-list">
          <% onlineIps.forEach(ip => { %>
            <li>
              <%= ip %>
              <form action="/admin/ban-ip" method="post" style="display:inline;">
                <input type="hidden" name="ip" value="<%= ip %>">
                <button type="submit" class="ban-button">BAN</button>
              </form>
            </li>
          <% }); %>
        </ul>
      </div>
    <% } else if (page === 'unban-ip') { %>
      <div class="section">
        <h2>Unban IPs</h2>
        <ul class="ip-list">
          <% bannedIps.forEach(ip => { %>
            <li>
              <%= ip %>
              <form action="/admin/unban-ip" method="post" style="display:inline;">
                <input type="hidden" name="ip" value="<%= ip %>">
                <button type="submit" class="unban-button">UNBAN</button>
              </form>
            </li>
          <% }); %>
        </ul>
      </div>
    <% } %>
  </div>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ban IP</title>
  <link rel="stylesheet" href="/assets/css/admin.css"> <!-- Link to your CSS file -->
</head>
<body>
  <div class="container">
    <h1>Ban IP Addresses</h1>
    <div class="navbar">
      <a href="/admin/home">Home</a>
      <a href="/admin/ban-ip">Ban IP</a>
      <a href="/admin/unban-ip">Unban IP</a>
    </div>
    <div class="section">
      <h2>Online IPs</h2>
      <ul class="ip-list">
        <% onlineIps.forEach(ip => { %>
          <li>
            <%= ip %>
            <form action="/admin/ban-ip" method="post" style="display:inline;">
              <input type="hidden" name="ip" value="<%= ip %>">
              <button type="submit" class="ban-button">BAN</button>
            </form>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>
</body>
</html>
